{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "app/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "emulators": {
    "singleProjectMode": true,
    "firestore": {
      "host": "localhost",
      "port": 8082,
      "websocketPort": 8052
    },
    "ui": {
      "host": "localhost",
      "enabled": true
    },
    "auth": {
      "host": "localhost",
      "port": 9099
    }
  }
}
